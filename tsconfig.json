{
  "compilerOptions": {
    "target": "es2015",
    "baseUrl": "src",
    "noImplicitAny": false,
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "alwaysStrict": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext", "WebWorker"],
    "outDir": "dist",
    "paths": {
      "@API": ["./api"],
      "@Types": ["./types"],
      "@Components/*": ["./components/*"],
      "@Pages/*": ["./pages/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
